<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="addis_systems_bank_inherited_view" model="ir.ui.view">
            <field name="name">addis_systems_base.model_res_bank.inherited_form_view</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="placeholder">Region</attribute>
                </xpath>
                <xpath expr="//field[@name='street2']" position="attributes">
                    <attribute name="placeholder">Street</attribute>
                </xpath>
                <xpath expr="//field[@name='street']" position="attributes">
                    <attribute name="placeholder">Building</attribute>
                </xpath>
                <xpath expr="//field[@name='zip']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
